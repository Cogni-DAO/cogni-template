{
  log {
    level INFO
    format json
    output file /data/logs/caddy/caddy.log
  }
}

{$DOMAIN}, www.{$DOMAIN} {
  encode zstd gzip
  reverse_proxy app:3000
  log {
    format json
    output file /data/logs/caddy/access.log
  }
}

ai.{$DOMAIN} {
  encode zstd gzip
  reverse_proxy litellm:4000
  log {
    format json
    output file /data/logs/caddy/ai-access.log
  }
}